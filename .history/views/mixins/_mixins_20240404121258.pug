//- /*---------- Mixin Featured Item ----------*/
mixin featuredItem(image, alt, icon = '', status, namehouse, price, person_image, person_alt, person_name, person_address)
  li.featured-item
    .featured-image
      img(src= image, alt= alt)
      .button.featured-status
        if icon
          case icon
            when 'icon-fire'
              include ../icons/_icon-fire
            when 'icon-house'
              include ../icons/_icon-house
            when 'icon-wallet'
              include ../icons/_icon-wallet
        span= status
    .featured-info
      .featured-namehouse= namehouse
      .featured-price= price
    .featured-person
      img.featured-person-image(src= person_image, alt= person_alt)
      .featured-person-info
        .featured-person-name= person_name
        .featured-person-address= person_address

//- /*---------- Mixin AboutUs Item ----------*/
mixin aboutItem(image, alt, title, caption, person_image, person_alt, person_name, person_bio, point)
  li.about-item
    img.about-image(src= image, alt= alt)
    .about-info
      h3.heading.about-title= title
      p.about-caption= caption
      .about-person
        .about-left
          img.about-person-image(src= person_image, alt= person_alt)
          .about-person-info
            span.about-person-name= person_name
            span.about-person-bio= person_bio
        .about-right
          include ../icons/_icon-star
          span.about-point= point